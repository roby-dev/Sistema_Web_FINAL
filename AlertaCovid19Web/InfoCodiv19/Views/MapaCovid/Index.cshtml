<script>

    var map;
    var NewLatLng = [];
    var cliente = [];
    var markers = [];
    var marker;
    var bounds;
    var infowindow;
   
     function initialize1() {

        var bounds = new google.maps.LatLngBounds();

        var mapProp = {
            center: new google.maps.LatLng(-18.0201099, -70.2569101),
            zoom: 2,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        map = new google.maps.Map(document.getElementById("googleMap"), mapProp);

         var infoWindow = new google.maps.InfoWindow({ content: "cargando" });

         var apiUrl = 'https://disease.sh/v3/covid-19/countries/?fbclid=IwAR2-XmKH-LarYzqUoYSv12scKFb09HR3sPbHUABDkM3y8phu1qHCqK4gurU';
         $.getJSON(apiUrl)
             .done(function (data) {
                 NewLatLng = []
                 $.each(data, function (key, item) {
                   var point = new google.maps.LatLng(item.countryInfo.lat, item.countryInfo.long);
                   bounds.extend(point);

                 var marker = new google.maps.Marker({
                    position: point,
                     map: map,
                     html: "<div class='container'>  <h5>" + item.country + " </h5>  <br> <img  src=" + item.countryInfo.flag + " width='100' height='60'  />  </div>  ",
                        });

                     google.maps.event.addListener(marker, "click", function () {
                         Detalle(item.cases, item.deaths, item.recovered);
                 infoWindow.setContent(this.html);
                 infoWindow.open(googleMap, this);

               });

           });

       });
    }

    function Detalle(confirmados, bajas, recuperados) {
        $("#confirmados").text(confirmados);
        $("#bajas").text(bajas);
        $("#recuperados").text(recuperados);
    }

    google.maps.event.addDomListener(window, 'load', initialize1);

    
</script>
